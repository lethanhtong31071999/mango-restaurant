<!-- Sidebar Start -->
<partial name="_SidebarAdminPartialView" />
<!-- Sidebar End -->

<div class="content">
    <div class="px-4">
        <div class="row pt-4 mb-3">      
            <div class="col-6 offset-6 text-end">
                <a asp-action="Upsert" asp-controller="Product" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i>
                    Create product
                </a>
            </div>
        </div>
        <div class="">
            <table 
                id="product-table-admin" 
                class="mt-3" style="width:100%" 
                data-upsert-url="@Url.Action("Upsert", "ProductAdmin")" 
                data-url="@Url.Action("GetProducts", "ProductAdmin")">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>CategoryName</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Function</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
    <script src="~/js/product.js"></script>
}