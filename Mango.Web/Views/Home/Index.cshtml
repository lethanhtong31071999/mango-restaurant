@model List<ProductDto>

<div class="flex-grow-1 d-flex flex-column">
    <!-- Jumbotron section -->
    <div class="p-5 bg-light">
        <div class="container-fluid text-center">
            <h1 class="display-6">Welcome to Mango Restaurant</h1>
            <p class="lead">Discover the delicious world of food with us.</p>
        </div>
    </div>

    <div class="bg-white flex-grow-1">
        <div class="container py-3">
            <h2 class="text-center text-info mb-5">Best seller</h2>
            @if (Model.Count > 0)
            {
                <div class="row">
                    @foreach (var item in @Model)
                    {
                        <div class="col-12 col-sm-6 col-lg-3 mb-3">
                            <div class="card h-100">
                                <img src="@item.ImageUrl"
                                     alt="Food @item.ProductId"
                                     class="card-img" style="width: 100%; aspect-ratio: 2" />
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title text-capitalize">@item.Name</h5>
                                    <p class="card-text text-secondary flex-grow-1">
                                        @Html.Raw(@item.Description)
                                    </p>
                                    <a href="#" class="btn btn-primary text-capitalize w-100">order now</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>Oops!</strong> We are uploading new products as soon as posible. Hope you coming back later.
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>
    </div>
</div>
